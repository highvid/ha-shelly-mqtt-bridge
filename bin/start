#!/usr/bin/env ruby

require 'bundler'
require 'active_support/all'
require 'timeout'
require 'logger'

Bundler.require(:default)
Dotenv.load('.env.local') if File.exist?('.env.local')

def tputs(message, level: 1)
  if level == 1
    Config.singleton.logger.info(message)
  elsif level == 2
    Config.singleton.logger.warn(message)
  else
    Config.singleton.logger.error(message)
  end
end

require_relative '../lib/exts'
require_relative '../lib/config'
Config.init!

require_relative '../lib/self_healing_array'
require_relative '../lib/self_healing_hash'
require_relative '../lib/entities'
require_relative '../lib/devices'
require_relative '../lib/mqtt'
require_relative '../lib/http_clients'

mqtt = Mqtt::Subscriber.new
mqtt.subscribe!

mqtt:
  home_assistant:
    host: <%= ENV['HOME_ASSISTANT_MQTT_HOST'] %>
    port: <%= ENV['HOME_ASSISTANT_MQTT_PORT'] %>
    username: <%= ENV['HOME_ASSISTANT_MQTT_USER'] %>
    password: <%= ENV['HOME_ASSISTANT_MQTT_PASSWORD'] %>
  relay:
    host: <%= ENV['RELAY_MQTT_HOST'] %>
    port: <%= ENV['RELAY_MQTT_PORT'] %>
    username: <%= ENV['RELAY_MQTT_USER'] %>
    password: <%= ENV['RELAY_MQTT_PASSWORD'] %>
devices:
  <% if ENV['SHELLY_DIMMER_2'].present? %>
    shelly_dimmer_2:
    <% ENV['SHELLY_DIMMER_2'].split(',').uniq.each do |topic| %>
      - <%= topic %>
    <% end %>
  <% end %>

  <% if ENV['SHELLY_2_5'].present? %>
    shelly_2_5:
    <% ENV['SHELLY_2_5'].split(',').uniq.each do |topic| %>
      - <%= topic %>
    <% end %>
  <% end %>

  <% if ENV['SHELLY_PLUS_1_PM'].present? %>
    shelly_plus_1_pm:
    <% ENV['SHELLY_PLUS_1_PM'].split(',').uniq.each do |topic| %>
      - <%= topic %>
    <% end %>
  <% end %>

  <% if ENV['SHELLY_1'].present? %>
    shelly_1:
    <% ENV['SHELLY_1'].split(',').uniq.each do |topic| %>
      - <%= topic %>
    <% end %>
  <% end %>

  <% if ENV['SHELLY_1_PM'].present? %>
    shelly_1_pm:
    <% ENV['SHELLY_1_PM'].split(',').uniq.each do |topic| %>
      - <%= topic %>
    <% end %>
  <% end %>
